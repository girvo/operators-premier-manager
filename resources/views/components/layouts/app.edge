<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ title ?? 'Operators' }} | Operators
    </title>
    <meta name="csrf-token" content="{{ csrfToken }}" />

    <script src="https://cdn.tailwindcss.com">

    </script>
    <script src="https://unpkg.com/htmx.org@1.9.10">

    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/dark.css" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr">

    </script>
    <script>
      document.addEventListener("htmx:configRequest", function(evt) {
        const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute("content");
        if (csrfToken) {
          evt.detail.headers["x-csrf-token"] = csrfToken;
        }
        const xsrfToken = document.cookie.split("; ").find(row => row.trim().startsWith("XSRF-TOKEN="))?.split("=")[1]?.replace(/^"|"$/g, "");
        if (xsrfToken) {
          evt.detail.headers["X-XSRF-TOKEN"] = decodeURIComponent(xsrfToken);
        }
      });
      // Toast notification system

      function showToast(message, type = "error") {
        const container = document.getElementById("toast-container");
        const toast = document.createElement("div");
        const colors = {
          error: "bg-red-900/90 border-red-500 text-red-200",
          success: "bg-green-900/90 border-green-500 text-green-200",
          warning: "bg-yellow-900/90 border-yellow-500 text-yellow-200"
        };
        toast.className = `toast-enter p-4 rounded border ${colors[type] || colors.error} shadow-lg flex items-center gap-3 max-w-sm`;
        toast.innerHTML = `
                                  <span class="flex-1">${message}</span>
                                  <button onclick="this.parentElement.remove()" class="text-current opacity-70 hover:opacity-100">&times;</button>
                                `;
        container.appendChild(toast);
        setTimeout(() => {
          toast.classList.replace("toast-enter", "toast-exit");
          setTimeout(() => toast.remove(), 300);
        }, 5e3);
      }
      // Global HTMX error handling

      document.addEventListener("htmx:responseError", function(evt) {
        const xhr = evt.detail.xhr;
        let message = "Request failed";
        if (xhr.status === 422) {
          message = xhr.responseText || "Validation error";
        } else if (xhr.status === 403) {
          message = "You do not have permission to perform this action";
        } else if (xhr.status === 404) {
          message = "Resource not found";
        } else if (xhr.status >= 500) {
          message = "Server error. Please try again.";
        }
        showToast(message);
      });

      document.addEventListener("htmx:sendError", function(evt) {
        showToast("Network error. Please check your connection.");
      });

      document.addEventListener("htmx:timeout", function(evt) {
        showToast("Request timed out. Please try again.");
      });
    </script>

    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              valorant: {
                red: "#ff4655",
                dark: "#0f1923",
                gray: "#1f2326",
                light: "#ece8e1"
              }
            }
          }
        }
      };
    </script>

    <style>
      /* HTMX Loading Indicators */
      
      .htmx-indicator {
        display: none;
      }
      
      .htmx-request .htmx-indicator,
      .htmx-request.htmx-indicator {
        display: inline-flex;
      }
      
      /* Disabled state during request */
      
      .htmx-request {
        pointer-events: none;
        opacity: 0.7;
      }
      
      /* Hide content during request (for swapping text with spinner) */
      
      .htmx-request .htmx-hide-on-request {
        display: none;
      }
      
      /* Toast animations */
      
      @keyframes toast-in {
        from {
          transform: translateX(100%);
          opacity: 0;
        }
      
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }
      
      @keyframes toast-out {
        from {
          transform: translateX(0);
          opacity: 1;
        }
      
        to {
          transform: translateX(100%);
          opacity: 0;
        }
      }
      
      .toast-enter {
        animation: toast-in 0.3s ease-out forwards;
      }
      
      .toast-exit {
        animation: toast-out 0.3s ease-in forwards;
      }
      
      /* Flatpickr Valorant theme overrides */
      
      .flatpickr-calendar {
        background: #1f2326;
        border: 1px solid rgba(255, 70, 85, 0.2);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
      }
      
      .flatpickr-calendar.arrowTop::before,
      .flatpickr-calendar.arrowTop::after {
        border-bottom-color: #1f2326;
      }
      
      .flatpickr-months .flatpickr-month,
      .flatpickr-current-month .flatpickr-monthDropdown-months,
      .flatpickr-weekdays,
      span.flatpickr-weekday {
        background: #1f2326;
        color: #ece8e1;
      }
      
      .flatpickr-day {
        color: #ece8e1;
      }
      
      .flatpickr-day:hover {
        background: rgba(255, 70, 85, 0.2);
        border-color: transparent;
      }
      
      .flatpickr-day.selected {
        background: #ff4655;
        border-color: #ff4655;
      }
      
      .flatpickr-day.today {
        border-color: #ff4655;
      }
      
      .flatpickr-time {
        border-top: 1px solid rgba(255, 70, 85, 0.2);
      }
      
      .flatpickr-time input,
      .flatpickr-time .flatpickr-am-pm {
        color: #ece8e1;
      }
      
      .flatpickr-time input:hover,
      .flatpickr-time input:focus,
      .flatpickr-time .flatpickr-am-pm:hover {
        background: rgba(255, 70, 85, 0.2);
      }
      
      .numInputWrapper:hover {
        background: rgba(255, 70, 85, 0.1);
      }
      
      .flatpickr-current-month input.cur-year {
        color: #ece8e1;
      }
      
      .flatpickr-months .flatpickr-prev-month,
      .flatpickr-months .flatpickr-next-month {
        color: #ece8e1;
        fill: #ece8e1;
      }
      
      .flatpickr-months .flatpickr-prev-month:hover,
      .flatpickr-months .flatpickr-next-month:hover {
        color: #ff4655;
        fill: #ff4655;
      }
    </style>
  </head>
  <body hx-boost="true" class="bg-valorant-dark text-valorant-light min-h-screen">
    <nav class="bg-valorant-gray border-b border-valorant-red/20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <a href="/dashboard" class="flex items-center gap-2 text-xl font-bold text-valorant-red">
              <img src="/images/logo.png" alt="Operators Logo" class="h-8 w-8" />
              OPERATORS
            </a>
            <div class="hidden md:block">
              <div class="ml-10 flex items-baseline space-x-4">
                <a href="/dashboard" class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition">Dashboard</a>
                <a href="/matches" class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition">Matches</a>
                <a href="/availability" class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition">Availability</a>
                <a href="/players" class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition">Players</a>
                <a href="/strats" class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition">Strats</a>
                @if(auth.user?.isAdmin)
                  <a
                    href="/admin/registrations"
                    class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition"
                  >Registrations</a>
                  <a href="/admin/maps" class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition">Maps</a>
                @endif
              </div>
            </div>
          </div>
          <div class="hidden md:flex items-center space-x-4">
            <span class="text-sm text-valorant-light/70">{{ auth.user?.fullName ?? auth.user?.email }}</span>
            @if(auth.user?.isAdmin)
              <span class="px-2 py-1 text-xs bg-valorant-red/20 text-valorant-red rounded">Admin</span>
            @endif
            <a
              href="/settings/profile"
              class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition"
            >Settings</a>
            <form hx-boost="false" action="/logout" method="POST" class="inline">
              {{ csrfField() }}
            <button type="submit" class="px-3 py-2 text-sm font-medium hover:text-valorant-red transition">Logout</button>
            </form>
          </div>
          <div class="-mr-2 flex md:hidden">
            <button
              type="button"
              onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
              class="inline-flex items-center justify-center p-2 rounded-md text-valorant-light hover:text-white hover:bg-valorant-red/20 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
              aria-controls="mobile-menu"
              aria-expanded="false"
            >
              <span class="sr-only">Open main menu</span>
              <svg
                class="block h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <div class="hidden md:hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
          <a
            href="/dashboard"
            class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
          >Dashboard</a>
          <a
            href="/matches"
            class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
          >Matches</a>
          <a
            href="/availability"
            class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
          >Availability</a>
          <a
            href="/players"
            class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
          >Players</a>
          <a
            href="/strats"
            class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
          >Strats</a>
          @if(auth.user?.isAdmin)
            <a
              href="/admin/registrations"
              class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
            >Registrations</a>
            <a
              href="/admin/maps"
              class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
            >Maps</a>
          @endif
        </div>
        <div class="pt-4 pb-3 border-t border-valorant-red/20">
          <div class="flex items-center px-5">
            <div class="ml-3">
              <div class="text-base font-medium leading-none text-white">
                {{ auth.user?.fullName ?? auth.user?.email }}
              </div>
              @if(auth.user?.isAdmin)
                <div class="mt-1">
                  <span class="px-2 py-1 text-xs bg-valorant-red/20 text-valorant-red rounded">Admin</span>
                </div>
              @endif
            </div>
          </div>
          <div class="mt-3 px-2 space-y-1">
            <a
              href="/settings/profile"
              class="block px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
            >Settings</a>
            <form hx-boost="false" action="/logout" method="POST">
              {{ csrfField() }}
              <button
                type="submit"
                class="block w-full text-left px-3 py-2 rounded-md text-base font-medium text-valorant-light hover:text-white hover:bg-valorant-red/20"
              >Logout</button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      @if(flashMessages.has('success'))
        <div class="mb-4 p-4 bg-green-900/50 border border-green-500 rounded text-green-200">
          {{ flashMessages.get('success') }}
        </div>
      @endif
      
      @if(flashMessages.has('error'))
        <div class="mb-4 p-4 bg-red-900/50 border border-red-500 rounded text-red-200">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      
      {{{ await $slots.main() }}}
    </main>

    <!-- Toast notification container -->
    <div id="toast-container" class="fixed bottom-4 right-4 z-50 flex flex-col gap-2">
    </div>
  </body>
</html>
